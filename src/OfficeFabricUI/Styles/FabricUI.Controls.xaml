<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fabric.styles="clr-namespace:OfficeFabricUI.Styles"
                    xmlns:sys="clr-namespace:System;assembly=System.Runtime">

    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource FabricButtonStyle}"/>
    <Style TargetType="{x:Type Menu}" BasedOn="{StaticResource FabricMenuStyle}"/>
    <Style TargetType="{x:Type ContextMenu}" BasedOn="{StaticResource FabricContextMenuStyle}"/>
    <Style TargetType="{x:Type MenuItem}" BasedOn="{StaticResource FabricMenuItemStyle}"/>
    <Style TargetType="{x:Type Separator}" BasedOn="{StaticResource FabricSeparatorStyle}"/>
    <Style TargetType="{x:Type TabControl}" BasedOn="{StaticResource FabricTabControlStyle}"/>
    <Style TargetType="{x:Type TabItem}" BasedOn="{StaticResource FabricTabItemStyle}"/>

</ResourceDictionary>